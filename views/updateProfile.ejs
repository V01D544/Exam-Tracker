<% if(UserData.email=="admin@admin.com"){%>
  <%- include('Admin/Partials/header') %> 
  <%}else{%>
<%- include('partials/authHeader') %>
<%}%>


<div style="margin-bottom: 2rem" class="container ">
  <h1 style="text-align: center" class="mt-3">Edit Profile</h1>
  <hr class="mb-0"/>
  <!-- <div class="row"> -->
    <!-- left column -->
    <form
      class="form-horizontal"
      action="/update"
      method="post"
      enctype="multipart/form-data"
    >
    
    
      <!-- edit form column -->
      <div class="row" >
        <div class="col-lg-2 mt-4">

        </div>
        <div class="col-lg-4 mt-4">
          <div>
            <h3 style="text-align: center">Personal info</h3>
          </div>

          <div class="form-group">
            <label class="control-label" >First name:</label>
            <div class="" >
              <input required
                class="form-control"
                type="text"
                name="newfirstname"
                value="<%=UserData.firstName %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class=" control-label">Last name:</label>
            <div class="">
              <input required
                class="form-control"
                type="text"
                name="newlastname"
                value="<%=UserData.lastName %>"
              />
            </div>
          </div>

          <div class="form-group">
            <label class=" control-label">Email</label>
            <div class="">
              <input disabled
                class="form-control"
                type="email"
                name="newemail"
                value="<%= UserData.email %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class=" control-label">Mobile Number</label>
            <div class="">
              <input required
                class="form-control"
                type="tel"
                maxlength="10"
                name="newnumber"
                value="<%= UserData.mobileNumber %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label">Address</label>
            <div class="">
              <input required
                class="form-control"
                type="text"
                name="newaddress"
                value="<%= UserData.address %>"
              />
            </div>
          </div>
         
          <% if(UserData.email!="admin@admin.com"){%>
          <div class="dropdown text-center mt-3 ">
            <button class="btn btn-default dropdown-toggle" style="float: left;" type="button" data-toggle="dropdown">
               Exams </button>
            <ul class="dropdown-menu" >

             <%  for(var i=0;i<examlist.length;i++){  %>
                <div class="">
                  <li><label><input  type="checkbox" value='<%= examlist[i] %>' name="userExam"/> <%= examlist[i] %></label></li>
                </div>
               <% }  %>

           </ul>
      
         
          </div>

          <%}%>
        </div>
        <div style="text-align: center" class="col-lg-6 mt-4">
          <div>
            <h3 style="text-align: center">Profile Image</h3>
          </div>
          <div>
            <img
              src="/Uploads/<%=UserData.image %>"
              class="image-circle centered-and-cropped"
              style="border-radius: 50%; width: 12.5rem; height: 12.5rem; padding-bottom: 5%"
              alt="avatar"
              onerror="this.src='/Images/default.png'"
            />
          </div>
          <input
            style="padding-left: 6rem"
            type="file"
            name="inputImage"
            class="form-control-image"
          />
        </div>
      </div>
    
      <div
        style="margin-top: 4rem"
        class="text-center d-flex justify-content-center mb-2"
      >
        <button
          
          class="btn btn-primary col-md-2"
          type="submit"
        >
          Update
        </button>
        <a
          style="margin-left: 1.25rem;" 
          class="btn btn-outline-primary col-md-2"
          href="/profile"
          >Cancel</a
        >
      </div>
    </form>
  <!-- </div> -->
</div>

<%- include('partials/footer') %>
